&lt;p&gt;Drawing inspiration from the following &lt;a href="https://busterbenson.com/life-in-weeks"&gt;Buster Benson life in weeks&lt;/a&gt; which in turn inspired this &lt;a href="https://days.sonnet.io/"&gt;page&lt;/a&gt; and this &lt;a href="https://www.weeksofyour.life/"&gt;one&lt;/a&gt; and also from this &lt;a href="https://waitbutwhy.com/2014/05/life-weeks.html"&gt;Wait but Why article&lt;/a&gt;; I am trying to create my own version of it.&lt;/p&gt;
&lt;p&gt;In particular I like this &lt;a href="https://weeks.ginatrapani.org/"&gt;version from Gina Trapani&lt;/a&gt;, and the existing github &lt;a href="https://github.com/ginatrapani/life-in-weeks"&gt;repo&lt;/a&gt;&lt;/p&gt;
&lt;h1&gt;First iteration&lt;/h1&gt;
&lt;p&gt;Hard coded with colored decade, each square is a week.&lt;/p&gt;
&lt;style&gt;
    .calendar {
      margin: 50px 0;
      position: relative; }
      .calendar:before {
        content: 'Week of the year -&gt;';
        position: relative;
        right: 15px; }
      .calendar:after {
        content: '&lt;- Age';
        position: absolute;
        top: 40px;
        left: -50px;
        -webkit-transform: rotate(270deg);
        transform: rotate(270deg); }

    .case {
      width: calc( 100% / 52 );
      height: calc( 100% / 52 );
      display: inline-block;
      border: 1.5px solid rgba(0, 0, 0, 0.31);
      vertical-align: baseline;
      border-radius: 25%;
      float: left;
      background: white;
      margin: 2.5px; }
      .case.checked0 {
        background: #2196f4; }
      .case.checked1 {
        background: #21f492; }
      .case.checked2 {
        background: #64f421; }
      .case.checked3 {
        background: #f4e621; }
      .case.checked4 {
        background: #f4b121; }
      .case.checked5 {
        background: #f46421; }
      .case.checked6 {
        background: #f42821; }
      .case.checked7 {
        background: #c321f4; }
        .case.checked8 {
        background: #f421d1; }
      .case.checked9 {
        background: #f42183; }
      .case.checked100 {
        background: #2196f4; }

    /*@include grandient-grid(4680);*/
    .date {
      margin: 15px 0;
      padding: 15px 0 35px 0;
      border-top: 1px solid lightgrey;
      border-bottom: 1px solid lightgrey; }
      .date input {
        min-width: 100px; }
&lt;/style&gt;

&lt;div class="container"&gt;
  &lt;div class="calendar"&gt;
    &lt;div class="row"&gt;
   &lt;/div&gt;
  &lt;/div&gt;
 &lt;/div&gt;

&lt;!-- should not be using moment --&gt;

&lt;script&gt;
    var $ = {
        id: function (id) {
            return document.getElementById(id);
        },
        el: function (el) {
            return document.querySelector(el);
        },
        class: function (el) {
            return document.getElementsByClassName(elClass);
        },
        tag: function (el) {
            return document.getElementsByTagName(tag);
        },
        all: function (el) {
            return document.querySelectorAll(el);
        },
    };

    var calendar = {};
    calendar.$ = {};
    calendar.$.container =  $.el('.calendar .row');
    calendar.get_container_width = function() {
      var width = parseInt(window.getComputedStyle(calendar.$.container).getPropertyValue('width').match(/\d+/));
      return width;
    };


    calendar.set_grid = function () {
       // hard coded
      var birth_date = new Date(1976,3,20,16,30,0,0);
      var today = new Date();

      var weeks= 0;

      var diffTime = today - birth_date;
      var weeksbetween = Math.round((today - birth_date) / (7 * 24 * 60 * 60 * 1000));
      return weeksbetween;
    };

    calendar.create_grid = function (limit) {
      calendar.$.container.innerHTML = null;
    var grid= document.createDocumentFragment();

      for (var i = 0; i &lt; (52*120); i++){
       var week = document.createElement('div');
    //    var opacity = (-1 / i) *-200;
        week.className = "case";
        if (i &lt;= limit){
          if (i &lt;= (52*10)) {
            week.className += " checked0";  
          } else if (i &lt;= (52*20)) {
            week.className += " checked1";
          } else if (i &lt;= (52*30)) {
            week.className += " checked2";
          } else if (i &lt;= (52*40)) {
            week.className += " checked3";
          } else if (i &lt;= (52*50)) {
            week.className += " checked4";
          } else if (i &lt;= (52*60)) {
            week.className += " checked5";
          } else if (i &lt;= (52*70)) {
            week.className += " checked6";
          } else if (i &lt;= (52*80)) {
            week.className += " checked7";
          } else if (i &lt;= (52*90)) {
            week.className += " checked8";
          } else if (i &lt;= (52*100)) {
            week.className += " checked9";
          } else {
            week.className += " checked100";
          }
        //  week.style.background= 'rgba(255,0,0,'+ opacity +')';
        }
        week.id = i+1;
        week.style.height = calendar.get_container_width()/52  + "px";
        grid.appendChild(week);
      }
      calendar.$.container.appendChild(grid);
      calendar.$.grid = $.all('.case');
    };

    calendar.resize_grid= function(){
      [].forEach.call(calendar.$.grid, function (elem, index) {
        elem.style.height = calendar.get_container_width()/52   + "px";
      });
    };

    //document.body.onresize = calendar.resize_grid;
    window.onload = function() {
      calendar.create_grid(calendar.set_grid());
    };

    &lt;/script&gt;
